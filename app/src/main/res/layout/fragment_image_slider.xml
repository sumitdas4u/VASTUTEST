<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/lbl_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="1 of 1"
        android:layout_above="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/imgDp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/profile1" />

        <TextView
            android:id="@+id/uploaderAndPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saddam Hussain at Hatibagan"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_alignParentBottom="false"
            android:layout_toEndOf="@+id/imgDp"
            android:layout_toRightOf="@+id/imgDp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#fff"
        android:id="@+id/linearLayout5">
    <include layout="@layout/like_comment_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

</RelativeLayout>